@model FInalProject.DATA.EF.CourseCompletion

@{
    ViewBag.Title = "Details";
}

<section>
    <br />
    <h2 style="padding-top:3em; color: white">@ViewBag.Title</h2>
    <br />

    <div>

        <dl class="d-lg-table">
            <dt>
                Date Completed<br />
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCompleted)<br />
            </dd>

            <dt>
                Course Name<br />
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Course.CourseName)<br />
            </dd>

            <dt>
                First Name<br />
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetail.FirstName)<br />
            </dd>

        </dl>
    </div>
    <br />
    <div class="btn btn-black">
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.CourseCompletionId }) @: |
        }
        
        @Html.ActionLink("Back to Completed Courses", "Index")
    </div>
    <br/>
    <br/>
</section>
