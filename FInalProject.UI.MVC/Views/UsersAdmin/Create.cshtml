@model FinalProject.UI.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
}

<section style="color:white;">
    <br />
    <br />
    <h2 style="padding-top:3em;">@ViewBag.Title</h2>

    @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <br />
        @Html.ValidationSummary("", new { @class = "text-error" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4" style="background-color:rgba(0,0,0,0.7);">
            <label class="col-md-5 control-label">
                Select User Role
            </label>
            <div class="col-md-10">
                @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                    <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="color:#e5b929" type="submit" value="Create" class="btn btn-black" />
                <div class="btn btn-black">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
    <br/>
</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
